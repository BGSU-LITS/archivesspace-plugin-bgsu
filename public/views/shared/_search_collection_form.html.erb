<h2 id="search" class="bgsu_common_sidebar_title"><%= t('internal_links.search_collection') %></h2>
<div class="search">

  <%= form_tag(app_prefix("#{resource_uri}/search"), method: 'get', :class=> "bgsu_common_form") do %>

    <div class="bgsu_common_form_group">
      <%= label_tag('filter_q0',
                    "#{t('actions.search_in',
                    :type => t('resource._singular'))}") %>
      <div>
      <%= text_field_tag('filter_q[]',
                         nil,
                         :id => 'filter_q0',
                         :placeholder => "#{action_text}",
                         :class=> "form-control") %>
      </div>
    </div>

    <div class="bgsu_common__closer bgsu_common__flex bgsu_common__gap">
      <%= hidden_field_tag('op[]','') %>
      <%= hidden_field_tag('field[]','') %>
      <%= hidden_field_tag('limit','') %>
      <%= hidden_field_tag('q[]','*') %>

      <div class="bgsu_common_form_group year_from">
        <%= label_tag('filter_from_year',
                      "#{t('search_results.filter.from_year')}") %>
        <div>
        <%= text_field_tag(:filter_from_year,
                           nil,
                           :id => 'filter_from_year',
                           :size => 4,
                           :maxlength => 4,
                           :placeholder => t('search_results.filter.from_year'),
                           :class=>"form-control") %>
        </div>
      </div>

      <div class="bgsu_common_form_group year_to">
        <%= label_tag('filter_to_year',
                      "#{t('search_results.filter.to_year')}") %>
        <div>
        <%= text_field_tag(:filter_to_year,
                           nil,
                           :id => 'filter_to_year',
                           :size => 4,
                           :maxlength => 4,
                           :placeholder => t('search_results.filter.to_year'),
                           :class=> "form-control") %>
        </div>
      </div>

    </div>

    <div>
      <%= submit_tag(t('search-button.label'), :class=>'bgsu_common_button bgsu_common_button__primary bgsu_common_button__small') %>
    </div>

  <% end %>

</div>
