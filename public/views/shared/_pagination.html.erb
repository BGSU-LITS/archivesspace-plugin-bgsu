<% pager_id ||= 'paging' %>
<% prefix = app_prefix(pager.link) + (pager.link.include?('?') ? '&' : '?') %>

<div id="<%= pager_id %>">
  <nav class="nav-page" aria-label="pagination">
    <div>
      <% if pager %>
        <a class="nav-page-first"<% if pager.page > 1 %> href="<%= prefix %>page=1"<% end %>>First</a>
        <a class="nav-page-previous"<% if pager.page > 1 %> href="<%= prefix %>page=<%= pager.prev %>"<% end %>>Previous</a>
        <a class="nav-page-next"<% if pager.page < pager.last_page %> href="<%= prefix %>page=<%= pager.next %>"<% end %>>Next</a>
        <a class="nav-page-last"<% if pager.page < pager.last_page %> href="<%= prefix %>page=<%= pager.last_page %>"<% end %>>Last</a>
      <% end %>
    </div>
	<div>
	  <% if defined?(@paging) %>
		<a aria-current="page">
		  <%= defined?(@results_type) ? @results_type : t('search_results.results') %>
		  <%= number_with_delimiter(@paging['offset_first']) %> &ndash;
		  <%= number_with_delimiter(@paging['offset_last']) %> of
		  <%= number_with_delimiter(@paging['total_hits']) %>
		</a>
	  <% elsif defined?(@results) %>
		<a aria-current="page">
		  <%= defined?(@results_type) ? @results_type : t('search_results.results') %>
		  <%= number_with_delimiter(@results['offset_first']) %> &ndash;
		  <%= number_with_delimiter(@results['offset_last']) %> of
		  <%= number_with_delimiter(@results['total_hits']) %>
		</a>
	  <% end %>
	  <% if pager_id == 'paging' %>
	  <%= render partial: 'shared/sorter' %>
	  <% end %>
	</div>
  </nav>
</div>
